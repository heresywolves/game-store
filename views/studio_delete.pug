extends layout

block content
  .page-content.delete-block
    h1 #{title}

    if studioGames.length
      p #[strong Delete the following games before attempting to delete this studio.]
      div
      dl 
        each game in studioGames
          dt 
            a(href=game.url) #{game.title}

    else
      p Do you really want to delete this studio?
      form(method='POST')
        div.form-group 
          .form-group__input-wrapper
            input#name.form-control(type='hidden' name='studioid' value=studio._id )
        button(type='submit' class='btn btn_delete') Delete 
