extends layout

block content
  .page-content.delete-block
    h1 #{title}
    p Do you really want to delete this game?
    p= game.title
    form(method='POST')
      div.form-group 
        .form-group__input-wrapper
          input#name.form-control(type='hidden' name='gameid' value=game._id )
      button(type='submit' class='btn btn_delete') Delete 
