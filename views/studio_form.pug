extends layout

block content
  .page-content
    h1 #{title}

    form(method='POST')
      div.form-group 
        .form-group__input-wrapper
          label(for='name') Studio Name:
          input#name.form-control(type='text', placeholder='' name='name' required value=(undefined===studio ? '' : studio.name) )
        .form-group__input-wrapper
          label(for='name') About:
          textarea#name.form-control(type='text' rows="10" name='about' required value=(undefined===studio? '' : studio.description) )
      button.btn(type='submit') Submit

    if errors
      ul
        for error in errors
          li!= error.msg