extends layout

block content
  .page-content.delete-block
    h1 #{title}

    if categoryGames.length
      p #[strong Delete the following games before attempting to delete this category.]
      div
      dl 
        each game in categoryGames 
          dt 
            a(href=game.url) #{game.title}

    else
      p Do you really want to delete this category?
      form(method='POST')
        div.form-group 
          .form-group__input-wrapper
            input#name.form-control(type='hidden' name='categoryid' value=category._id )
        button(type='submit' class='btn btn_delete') Delete 
